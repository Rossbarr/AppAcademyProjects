<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="header">
    <nav class="header-nav cf">
      <h1 class="header-logo">
        <a href=#>Music App!</a>
      </h1>

      <%= yield :header %>

      <%= login_or_logout %>
    </nav>
  </header>
  <body class="body">
    <%= yield %>
  </body>
  <footer class="footer">
    <%= yield :footer %>
  </footer>
</html>
